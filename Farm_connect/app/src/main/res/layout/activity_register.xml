<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Register"
    android:orientation="vertical"
    android:background="@color/white"
    android:id="@+id/LinearLayoutRegisterPage1">

    <LinearLayout
        android:id="@+id/LinearLayoutRegisterPage3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="#ffff">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:layout_margin="16dp"
            android:src="@drawable/image"/>
        <LinearLayout
            android:id="@+id/LinearLayoutRegisterPage2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ExistingUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="I'm already a member !  "
                android:textSize="15sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="12dp"
                android:textColor="@color/colorTextsecond"
                android:layout_marginLeft="16dp" />
            <TextView
                android:id="@+id/Login_btn_register_page"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Sign in"
                android:textSize="15sp"
                android:textColor="@color/teal_200"
                android:onClick="ClickSignin"
                android:textStyle="bold"
                 />
        </LinearLayout>
        <TextView
            android:id="@+id/TextViewRegisterPage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Create an Account"
            android:textSize="35sp"
            android:textStyle="bold"
            android:textColor="@color/colorTextfirst"
            />

        <TextView
            android:id="@+id/sign_up_with_registerPage"
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="39dp"
            android:layout_gravity="center_horizontal"
            android:text="Sign Up to get Started"
            android:textColor="@color/colorTextsecond"
            android:textSize="20sp"
            android:gravity="center_horizontal"/>

        <EditText
            android:id="@+id/InputUserNameInRegister"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/backgroundbox"
            android:drawableEnd="@drawable/ic_baseline_person_24"
            android:hint="User Name"
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorTextsecond"
            android:drawableRight="@drawable/ic_baseline_person_24" />

        <EditText
            android:id="@+id/InputEmailInRegister"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/backgroundbox"
            android:drawableEnd="@drawable/ic_baseline_email_24"
            android:hint="Email Address"
            android:inputType="textEmailAddress"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/colorTextfirst"
            android:textColorHint="@color/colorTextsecond"
            android:drawableRight="@drawable/email_icon" />

        <EditText
            android:id="@+id/InputPhoneNoInRegister"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/backgroundbox"
            android:drawableEnd="@drawable/ic_baseline_local_phone"
            android:hint="Mobile Number"
            android:inputType="number|phone"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorTextsecond"
            android:drawableRight="@drawable/ic_baseline_phone_24" />

        <EditText
            android:id="@+id/InputPasswordInRegister"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/backgroundbox"
            android:drawableEnd="@drawable/password_lock_icon_yellow"
            android:hint="Password"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorTextsecond"
            android:drawableRight="@drawable/password_lock_icon_yellow" />

        <EditText
            android:id="@+id/InputConfirmPasswordInRegister"
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/backgroundbox"
            android:drawableEnd="@drawable/password_lock_icon_yellow"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:textColor="@color/black"
            android:textColorHint="@color/colorTextsecond"
            android:drawableRight="@drawable/password_lock_icon_yellow" />

        <Button
            android:id="@+id/signup_btn_register"
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:layout_marginStart="75dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="75dp"
            android:background="@drawable/backgroundbutton"
            android:text="Sign Up"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:textStyle="bold"
            app:backgroundTint="@color/teal_200" />

    </LinearLayout>

</LinearLayout>
</ScrollView>